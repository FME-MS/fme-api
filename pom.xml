                        <configuration>
                            <nodeVersion>v22.13.0</nodeVersion>
                            <installDirectory>openapi-codegen</installDirectory>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>

    </profiles>
</project>